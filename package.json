{
  "name": "lifter",
  "description": "Electron Local Proxy for Fiddler users",
  "version": "0.0.1",
  "author": "@kyo_ago",
  "bugs": "https://github.com/kyo-ago/lifter/issues",
  "build": {
    "productName": "Lifter Proxy",
    "appId": "com.electron.lifter",
    "mac": {
      "category": "public.app-category.developer-tools"
    }
  },
  "dependencies": {
    "@reactivex/rxjs": "^5.0.0-rc.4",
    "browserify": "^13.1.1",
    "electron-sudo": "^4.0.12",
    "electron-window-state": "^4.0.0",
    "eventemitter2": "^2.2.1",
    "http-mitm-proxy": "^0.5.1",
    "ifconfig": "git+https://github.com/femto113/node-ifconfig.git",
    "mime": "^1.3.4",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^4.4.6",
    "redux": "^3.6.0",
    "regenerator-runtime": "^0.10.0",
    "remote": "^0.2.6",
    "typescript-dddbase": "0.0.2"
  },
  "devDependencies": {
    "@types/electron": "^1.4.27",
    "@types/eventemitter2": "^2.2.0",
    "@types/mime": "0.0.29",
    "@types/mocha": "^2.2.33",
    "@types/node": "^6.0.51",
    "@types/react": "^0.14.50",
    "@types/react-dom": "^0.14.19",
    "@types/react-redux": "^4.4.33",
    "@types/redux": "^3.6.31",
    "electron": "^1.4.8",
    "electron-builder": "^8.6.0",
    "fixpack": "^2.3.1",
    "mocha": "^3.2.0",
    "mock-fs": "^3.12.1",
    "mock-require": "^2.0.0",
    "npm-check-updates": "^2.8.7",
    "typescript": "^2.0.10"
  },
  "homepage": "https://github.com/kyo-ago/lifter/",
  "keywords": [
    "electron",
    "local proxy",
    "proxy"
  ],
  "license": "GPL-3.0",
  "main": "app/index.js",
  "repository": "kyo-ago/lifter",
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "clean": "rm -rf ./dist ./build ./app",
    "dist": "build",
    "fix": "fixpack",
    "ncu": "ncu",
    "pack": "build --dir",
    "postinstall": "install-app-deps",
    "prebuild": "rm -fr ./app && cp -a ./template-app ./app",
    "pretest": "tsc -p ./tsconfig_test.json",
    "rust": "cd ./rust/ && rm -f proxy-setting && rustc proxy-setting.rs",
    "rustinstall": "curl -sSf https://static.rust-lang.org/rustup.sh | sh",
    "start": "NODE_ENV='development' && electron ./app --enable-logging",
    "test": "mocha app/test/**/*-test.js",
    "watch": "tsc -p ./tsconfig.json --watch"
  }
}
