{
  "name": "lifter",
  "productName": "Lifter Proxy",
  "description": "Electron Local Proxy for Fiddler users",
  "version": "0.0.1",
  "author": "@kyo_ago",
  "bugs": "https://github.com/kyo-ago/lifter/issues",
  "build": {
    "productName": "Lifter Proxy",
    "appId": "com.electron.lifter",
    "mac": {
      "category": "public.app-category.developer-tools"
    }
  },
  "dependencies": {
    "@reactivex/rxjs": "^5.2.0",
    "browserify": "^14.1.0",
    "electron-window-state": "^4.1.0",
    "eventemitter2": "^4.1.0",
    "http-mitm-proxy": "^0.5.2",
    "ifconfig": "git+https://github.com/femto113/node-ifconfig.git",
    "mime": "^1.3.4",
    "minimatch": "^3.0.3",
    "nedb": "^1.8.0",
    "networksetup-proxy": "0.0.5",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.3",
    "redux": "^3.6.0",
    "regenerator-runtime": "^0.10.3",
    "remote": "^0.2.6",
    "typescript-dddbase": "0.0.2"
  },
  "devDependencies": {
    "@types/electron": "^1.4.35",
    "@types/eventemitter2": "^2.2.1",
    "@types/mime": "0.0.29",
    "@types/minimatch": "^2.0.29",
    "@types/mocha": "^2.2.40",
    "@types/nedb": "1.8.1",
    "@types/node": "^7.0.12",
    "@types/react": "^15.0.20",
    "@types/react-dom": "^0.14.23",
    "@types/react-redux": "^4.4.38",
    "@types/redux": "^3.6.31",
    "electron": "^1.6.2",
    "electron-builder": "^16.6.0",
    "fixpack": "^2.3.1",
    "mocha": "^3.2.0",
    "mock-fs": "^4.2.0",
    "mock-require": "^2.0.1",
    "npm-check-updates": "^2.10.4",
    "typescript": "^2.2.2"
  },
  "homepage": "https://github.com/kyo-ago/lifter/",
  "keywords": [
    "electron",
    "local proxy",
    "proxy"
  ],
  "license": "GPL-3.0",
  "main": "app/index.js",
  "repository": "kyo-ago/lifter",
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "clean": "rm -rf ./dist ./build ./app",
    "dist": "build",
    "fix": "fixpack",
    "ncu": "ncu",
    "pack": "build --dir",
    "postinstall": "install-app-deps",
    "prebuild": "rm -fr ./app && cp -a ./template-app ./app",
    "pretest": "tsc -p ./tsconfig_test.json",
    "start": "NODE_ENV='development' && electron ./app --enable-logging",
    "test": "mocha app/test/**/*-test.js",
    "watch": "tsc -p ./tsconfig.json --watch"
  }
}
