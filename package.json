{
  "name": "lifter",
  "description": "Electron Local Proxy for Fiddler users",
  "version": "0.0.2",
  "author": "@kyo_ago",
  "bugs": {
    "url": "https://github.com/kyo-ago/lifter/issues"
  },
  "build": {
    "productName": "Lifter Proxy",
    "appId": "com.electron.lifter",
    "mac": {
      "category": "public.app-category.developer-tools"
    }
  },
  "dependencies": {
    "@reactivex/rxjs": "^5.4.3",
    "@types/execa": "^0.7.0",
    "electron-window-state": "^4.1.1",
    "eventemitter2": "^4.1.2",
    "execa": "^0.8.0",
    "http-mitm-proxy": "^0.5.2",
    "ifconfig": "git+https://github.com/femto113/node-ifconfig.git",
    "mime": "^1.3.6",
    "minimatch": "^3.0.4",
    "monapt": "^1.0.4",
    "nedb": "^1.8.0",
    "networksetup-proxy": "^0.1.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "regenerator-runtime": "^0.10.5",
    "remote": "^0.2.6",
    "typescript-dddbase": "0.0.3"
  },
  "devDependencies": {
    "@types/jest": "^20.0.7",
    "@types/mime": "1.3.1",
    "@types/minimatch": "^3.0.0",
    "@types/nedb": "1.8.3",
    "@types/node": "^8.0.22",
    "@types/react": "^16.0.2",
    "@types/react-dom": "^15.5.2",
    "@types/react-redux": "^5.0.2",
    "@types/redux": "^3.6.31",
    "@types/sinon": "^2.3.3",
    "@types/when": "^2.4.29",
    "devtron": "^1.4.0",
    "electron": "^1.7.5",
    "electron-builder": "^19.22.1",
    "fixpack": "^2.3.1",
    "jest": "^20.0.4",
    "mock-require": "^2.0.2",
    "npm-check-updates": "^2.12.1",
    "sinon": "^3.2.0",
    "ts-jest": "^20.0.10",
    "typescript": "^2.4.2"
  },
  "homepage": "https://github.com/kyo-ago/lifter/",
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!@foo)"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "keywords": [
    "electron",
    "local proxy",
    "proxy"
  ],
  "license": "GPL-3.0",
  "main": "app/index.js",
  "productName": "Lifter Proxy",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kyo-ago/lifter.git"
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "clean": "rm -rf ./dist ./build ./app",
    "dist": "build",
    "fix": "fixpack",
    "ncu": "ncu",
    "pack": "build --dir",
    "postinstall": "electron-builder install-app-deps",
    "prebuild": "rm -fr ./app && cp -a ./template-app ./app",
    "start": "NODE_ENV='development' && electron ./app --enable-logging",
    "test": "jest",
    "watch": "tsc -p ./tsconfig.json --watch"
  }
}
