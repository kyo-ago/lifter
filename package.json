{
  "name": "lifter",
  "description": "Local Proxy for frontend developers",
  "version": "0.0.8",
  "author": "kyo_ago",
  "bugs": {
    "url": "https://github.com/kyo-ago/lifter/issues"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.44",
    "dotenv-cli": "^1.4.0",
    "fixpack": "^2.3.1",
    "lerna": "^2.5.1",
    "lint-staged": "^4.3.0",
    "mocha": "^4.0.1",
    "prettier": "^1.8.1",
    "ts-node": "^3.3.0",
    "typescript": "^2.6.1"
  },
  "files": [
    "bin/",
    "lib/",
    "src/"
  ],
  "homepage": "https://github.com/kyo-ago/lifter",
  "keywords": [
    "local proxy",
    "proxy"
  ],
  "license": "GPL-3.0",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/kyo-ago/lifter.git"
  },
  "scripts": {
    "app": "lerna run dev --scope @kyo-ago/lifter-app",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "fix": "lerna run fix && yarn run fixpack",
    "postcommit": "git reset",
    "postinstall": "cd packages/lifter-app && npm i",
    "precommit": "lint-staged",
    "prepublish": "yarn run bootstrap",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,css}'",
    "publish": "lerna publish && yarn run publish:app",
    "publish:app": "dotenv lerna run release --stream --scope @kyo-ago/lifter-app",
    "test": "lerna run test"
  }
}
