{
  "name": "@lifter/lifter",
  "description": "Local Proxy for frontend developers",
  "version": "0.0.11",
  "author": "kyo_ago",
  "bugs": {
    "url": "https://github.com/kyo-ago/lifter/issues"
  },
  "devDependencies": {
    "fixpack": "^2.3.1",
    "lerna": "^2.5.1",
    "prettier": "^1.8.1",
    "typescript": "^2.6.2"
  },
  "files": [
    "bin/",
    "lib/",
    "src/"
  ],
  "homepage": "https://github.com/kyo-ago/lifter",
  "keywords": [
    "local proxy",
    "proxy"
  ],
  "license": "GPL-3.0",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/kyo-ago/lifter.git"
  },
  "scripts": {
    "app": "NODE_ENV=development lerna run dev --scope @lifter/lifter-app",
    "bootstrap": "lerna bootstrap && yarn run build && yarn run compile",
    "build": "lerna run build",
    "clean": "lerna run clean && rm -fr lerna-debug.log package-lock.json yarn.lock node_modules app dist",
    "compile": "yarn run build && lerna run compile --scope @lifter/lifter-app",
    "fix": "lerna run fix && yarn run fixpack",
    "postcommit": "git reset",
    "prepublish": "yarn run bootstrap",
    "prettier": "prettier --trailing-comma all --write '**/*.{js,jsx,ts,tsx,css}'",
    "publish": "lerna publish && yarn run publish:app",
    "publish:app": "lerna run release --stream --scope @lifter/lifter-app",
    "test": "lerna run test"
  }
}
