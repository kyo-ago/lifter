{
  "name": "@lifter/lifter-app",
  "description": "lifter proxy application",
  "version": "0.0.12",
  "author": "@kyo_ago",
  "build": {
    "productName": "Lifter Proxy",
    "appId": "com.electron.lifter",
    "mac": {
      "category": "public.app-category.developer-tools"
    }
  },
  "dependencies": {
    "@lifter/electron-window-manager": "^0.0.12",
    "@lifter/lifter-common": "^0.0.12",
    "@lifter/lifter-main": "^0.0.12",
    "@lifter/networksetup-proxy": "^0.0.12",
    "element-ui": "^2.0.10",
    "monapt": "^1.0.4",
    "vue": "^2.5.13",
    "vue-i18n": "^7.4.2",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@kazupon/vue-i18n-loader": "^0.2.1",
    "electron": "^1.7.9",
    "electron-builder": "^19.49.0",
    "electron-load-devtool": "^1.0.0",
    "electron-webpack": "^1.11.0",
    "electron-webpack-ts": "^1.2.0",
    "electron-webpack-vue": "^1.1.0",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.6",
    "spectron": "^3.7.2",
    "webpack": "^3.10.0"
  },
  "directories": {
    "test": "src/"
  },
  "electronWebpack": {
    "renderer": {
      "webpackConfig": "./webpack.renderer.js"
    }
  },
  "license": "GPL-3.0",
  "main": "app/index.js",
  "productName": "Lifter Proxy",
  "scripts": {
    "build": "tsc -p .",
    "clean": "rm -fr package-lock.json yarn.lock node_modules dist lib",
    "compile": "electron-webpack --env.production",
    "depcruise": "depcruise --validate .dependency-cruiser.json src",
    "dev": "electron-webpack dev",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "locallink": "npm link @lifter/electron-window-manager @lifter/lifter-common @lifter/lifter-main @lifter/networksetup-proxy",
    "postinstall": "rm -fr ./node_modules/babel-minify-webpack-plugin/node_modules/",
    "release": "electron-builder --publish always",
    "start": "run-p dev",
    "test": "NODE_ENV='test' && TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' mocha --require ts-node/register src/**/*.spec.ts"
  }
}
