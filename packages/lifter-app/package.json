{
  "name": "@lifter/lifter-app",
  "description": "lifter proxy application",
  "version": "0.1.1",
  "author": "@kyo_ago",
  "build": {
    "productName": "Lifter Proxy",
    "appId": "com.electron.lifter",
    "mac": {
      "category": "public.app-category.developer-tools"
    }
  },
  "dependencies": {
    "@lifter/electron-window-manager": "^0.1.1",
    "@lifter/lifter-common": "^0.1.1",
    "@lifter/lifter-main": "^0.1.1",
    "@lifter/networksetup-proxy": "^0.1.1",
    "electron-context-menu": "^0.9.1",
    "electron-ipc": "^0.3.0",
    "electron-localshortcut": "^3.1.0",
    "electron-unhandled": "^1.0.0",
    "electron-window-state": "^4.1.1",
    "element-ui": "2.3.2",
    "execa": "^0.10.0",
    "http-mitm-proxy": "^0.6.1",
    "ifconfig": "^0.0.1",
    "melanke-watchjs": "^1.4.3",
    "micromatch": "^3.1.10",
    "mime": "^2.2.0",
    "monapt": "^2.0.0",
    "nedb": "^1.8.0",
    "rxjs": "^5.5.8",
    "source-map-support": "^0.5.4",
    "stat-mode": "^0.2.2",
    "sudo-prompt": "^8.2.0",
    "typescript-dddbase": "^0.0.5",
    "vue": "^2.5.16",
    "vue-i18n": "^7.6.0",
    "vuex": "^3.0.1",
    "webpack-merge": "^4.1.2"
  },
  "devDependencies": {
    "@kazupon/vue-i18n-loader": "^0.3.0",
    "@storybook/vue": "^3.4.1",
    "@types/nedb": "^1.8.5",
    "@vue/test-utils": "^1.0.0-beta.12",
    "babel-core": "^6.26.0",
    "devtron": "^1.4.0",
    "electron": "^1.8.4",
    "electron-builder": "^20.8.2",
    "electron-load-devtool": "^1.0.0",
    "electron-webpack": "^1.13.0",
    "electron-webpack-ts": "^1.4.0",
    "electron-webpack-vue": "^1.4.0",
    "fork-ts-checker-webpack-plugin": "^0.4.1",
    "jsdom": "^11.8.0",
    "jsdom-global": "^3.0.2",
    "mocha-webpack": "^1.1.0",
    "node-sass": "^4.8.3",
    "renamer": "^0.6.1",
    "sass-loader": "^6.0.7",
    "webpack": "^3.11.0"
  },
  "electronWebpack": {
    "renderer": {
      "webpackConfig": "./webpack.renderer.js"
    }
  },
  "license": "GPL-3.0",
  "main": "lib/main/index.js",
  "productName": "Lifter Proxy",
  "resolutions": {
    "webpack-sources": "1.0.1",
    "element-ui": "2.3.2"
  },
  "scripts": {
    "build": "tsc -p .",
    "build-storybook": "build-storybook",
    "clean": "rm -fr dist lib",
    "compile": "renamer -e -f '(mock|spec)\\.ts' -r '$1.t_s' 'src/**' && electron-webpack && renamer -e -f '(mock|spec)\\.t_s$' -r '$1.ts' 'src/**'",
    "depcruise": "depcruise --validate .dependency-cruiser.json src",
    "dev": "electron-webpack dev",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "release": "yarn compile && electron-builder --publish always",
    "start": "run-p dev",
    "storybook": "start-storybook -p 9001 -c storybook",
    "test": "NODE_ENV=test mocha-webpack --webpack-config test/webpack.config.js --require test/setup.js 'test/**/*.ts' 'src/**/*.mock.*' 'src/**/*.spec.*'",
    "watch": "yarn run test -- --watch"
  }
}
