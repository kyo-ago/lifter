  "version": "0.0.12",
  "author": "@kyo_ago",
  "dependencies": {
    "@lifter/electron-window-manager": "^0.0.12",
    "@lifter/lifter-common": "^0.0.12",
    "@lifter/networksetup-proxy": "^0.0.12",
